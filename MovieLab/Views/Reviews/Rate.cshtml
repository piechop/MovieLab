@model MovieLab.Models.ReviewViewModel

@{
    ViewBag.Title = "Rate Review";
    int id = (Model != null ? Model.MovieID : 0);
}

<h2>Review for @Html.DisplayFor(model => model.MovieTitle)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />

        <dl class="dl-horizontal">
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.MovieID)
            @Html.HiddenFor(model => model.Ratings)

            @Html.HiddenFor(model => model.ReviewTitle)
            <dt>
                @Html.DisplayFor(model => model.ReviewTitle)
            </dt>
            <dd></dd>

            <dt>by @Html.DisplayFor(model => model.Author)</dt>
            <dd>
            </dd>
            <dt>Submitted @Html.DisplayFor(model => model.ReviewTime)</dt>
            <dd></dd>

            @Html.HiddenFor(model => model.ReviewText)
            <dt>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReviewText)
            </dd>

            @Html.HiddenFor(model => model.MovieTitle)

            @Html.HiddenFor(model => model.Author)

            @Html.HiddenFor(model => model.MovieRating)
            <dt>
                @Html.DisplayNameFor(model => model.MovieRating)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MovieRating) / 100
            </dd>

            @Html.HiddenFor(model => model.ReviewRating)
            <dt>
                @Html.DisplayNameFor(model => model.ReviewRating)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReviewRating) / 100
            </dd>

            @Html.HiddenFor(model => model.ReviewTime)

        </dl>
        <div class="form-group">
        @Html.Label("Your Rating", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ReviewRating, new { htmlAttributes = new { @class = "form-control" } })
            <span class="text-danger">@ViewBag.Error</span>    
        </div>
    </div>
        <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Rate" class="btn btn-default" />
        </div>
    </div>
    </div>
}

<p>
    @Html.ActionLink("Back to Reviews", "ListOfReviewsByMovie", "Reviews", new { movieID = id }, null)
</p>
